<?xml version="1.0" encoding="UTF-8" ?>

<!-- file: school_student_report.xml -->
<odoo>
    <data>
        <template id="report_school_student">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <h2 style="color: blue;">STUDENT REPORT!!</h2>
                            <p >
                                <strong style="color: red;">Name:</strong><t t-esc="doc.student_name"/>
                            </p>
                            <p>
                                <strong style="color: red;">Age:</strong><t t-esc="doc.age"/>
                            </p>
                            <p>
                                <strong style="color: red;">Grade:</strong><t t-esc="doc.standard"/>
                            </p>
                            <p>
                               <strong style="color: red;"> Email:</strong><t t-esc="doc.email"/>
                           </p>
                           <p>
                               <strong style="color: red;">Gaurdain Name:</strong><t t-esc="doc.gaurdian_name"/>
                           </p>

                            <p>
                               <strong style="color: red;">Address :</strong><t t-esc="doc.address"/>
                           </p>

                        </div>


                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
