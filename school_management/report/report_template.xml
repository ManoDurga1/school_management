<?xml version="1.0" encoding="UTF-8" ?>

<!-- file: school_student_report.xml -->
<odoo>
    <data>
        <template id="report_school_student">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 style="color: blue;" align="center">STUDENT  FEE  STRUCTURE  REPORT</h2>
                    <!-- Loop through the student records -->
                    <main>
                        <t t-foreach="docs" t-as="doc">
                            <p>
                                <strong style="color: red;">Name:</strong>
                                <t t-esc="doc.student_name"/>
                            </p>
                            <p>
                                <strong style="color: red;">Age:</strong>
                                <t t-esc="doc.age"/>
                            </p>
                            <p>
                                <strong style="color: red;">Grade:</strong>
                                <t t-esc="doc.standard"/>
                            </p>
                            <p>
                                <strong style="color: red;">Email:</strong>
                                <t t-esc="doc.email"/>
                            </p>
                            <p>
                                <strong style="color: red;">Guardian Name:</strong>
                                <t t-esc="doc.gaurdian_name"/>
                            </p>
                            <p>
                                <strong style="color: red;">Address:</strong>
                                <t t-esc="doc.address"/>
                            </p>

                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Fee Name</th>
                                        <th>From Date</th>
                                        <th>To Date</th>
                                        <th>Tax Amount</th>
                                        <th>Fee Amount</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <t t-foreach="doc.fee_structure" t-as="line">
                                        <tr>
                                            <td><t t-esc="line.name"/></td>
                                            <td><t t-esc="line.from_date"/></td>
                                            <td><t t-esc="line.to_date"/></td>
                                            <td><t t-esc="line.tax_amount"/></td>
                                            <td><t t-esc="line.fee_amount"/></td>
                                            <td><t t-esc="line.state"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </main>
                </div>
            </t>
        </template>
    </data>
</odoo>
